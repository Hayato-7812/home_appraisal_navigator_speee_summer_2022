<h1 class="text-center mb-5"><%= @prefecture.name %> <%= @city.name %>の不動産会社</h1>

<% unless flash.empty? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="mb-5">
  <% if @city_branches.blank? %>
    <p>査定可能な企業がありません</p>
  <% end %>
</div>

<div class="mb-5">
  <% @city_branches.each do |branch| %>
    <%= link_to(branch, class: 'text-decoration-none text-body') do %>
      <div class="card mb-2">
        <div class="card-body">
          <%= render 'layouts/branch_info', branch: branch %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
