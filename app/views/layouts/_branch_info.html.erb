<div class="row">
  <div class="col">
    <p><%= branch.company.name %><%= branch.name %></p>
  </div>
  <div class="col-9">
    <p><%= branch.business_hours %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <p>★<%= branch.average_satisfaction_level %></p>
  </div>
  <div class="col-9">
    <p><%= branch.closed_day %></p>
  </div>
</div>
<div class="row">
  <div class="col"></div>
  <div class="col-9">
    <p>住所：<%= branch.city.prefecture.name %><%= branch.city.name %><%= branch.after_address %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <p>会社の決めて：</p>
  </div>
  <div class="col-9">
    <% if branch.reviews.blank? %>
      <p>口コミがありません</p>
    <% else %>
      <p><%= branch.reviews.first.comment_reason_to_decide %></p>
    <% end %>
  </div>
</div>
