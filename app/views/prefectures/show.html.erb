<h1 class="text-center mb-5"><%= @prefecture.name %>の不動産会社</h1>

<div class="mb-5">
  <h2><%= @prefecture.name %>全域</h2>
  <% if @prefecture.cities.empty? %>
    <p>査定可能な企業がありません</p>
  <% else %>
    <% @prefecture.cities.each do |city| %>
      <%= link_to(city.name, "#") %>
    <% end %>
  <% end %>
</div>

<div class="mb-5">
  <% @prefecture_branches.each do |prefecture_branch| %>
    <div class="card mb-2">
      <div class="card-body">
        <%= render 'branch_info', prefecture_branch: prefecture_branch %>
      </div>
    </div>
  <% end %>
</div>
